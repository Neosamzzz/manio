<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.proj.manio.mapper.ProductMapper">
    <select id="getProduct">
        SELECT * FROM product
        <where>
            <if test="categoryId != null">
                category_id = #{categoryId}
            </if>
        </where>
    </select>
</mapper>